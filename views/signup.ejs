<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
    <title>Sign Up</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"> 
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> 我报名（一期测试中）</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/signup" method="post">
        <div class="form-group">
            <label>Email（请尽量用国内邮箱，qq，163什么的）</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>密码（目前并不安全，所以先别用自己常用密码。推荐使用1234之类简单的。）</label>
            <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">我报名</button>
    </form>

    <hr>

    <p>已经报过名了？去<a href="/login">再看看</a></p>
    <p>返回 <a href="/">主页</a></p>

</div>

</div>
</body>
</html>
